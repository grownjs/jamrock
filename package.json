{
  "name": "jamrock",
  "version": "0.0.0",
  "description": "The herbsman's web framework",
  "main": "dist/jamrock.js",
  "bin": {
    "jam": "./bin/cli",
    "rock": "./bin/cli",
    "jamrock": "./bin/cli"
  },
  "files": [
    "dist/shared/**",
    "dist/*.js",
    "bin/*",
    "test.js",
    "store.js",
    "mailer.js",
    "server.js",
    "models.js"
  ],
  "scripts": {
    "test": "npm run test:unit --",
    "lint": "eslint *.js bin src tests seed --ext html,js || true",
    "seed": "jamrock main --out build --chdir seed --build",
    "dev": "npm run test:unit -- -w",
    "test:ci": "npm run coverage:unit && npm run report -- -r ${LCOV_OUTPUT:-lcov}",
    "test:e2e": "testcafe ${BROWSER:-chrome} tests/e2e/cases --color --debug-on-fail",
    "test:run": "NODE_ENV=test _mocha --exit --colors --recursive --watch-files 'tests/**' --watch-files 'src/**' -bR spec",
    "test:unit": "npm run test:run tests/*.spec.js --",
    "coverage": "nyc --x '**/{build,shared,tests,dist}/**' -x '**/*.spec.js'",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "report": "nyc report",
    "pretest": "npm run lint",
    "prepare": "npm run build",
    "mortero": "mortero -Ddist -L./bin/plug.js -X{jamrock,reactor,render,markup,views} -Xutil.js -Xmain.js -r '**:{filepath/1}'",
    "watch": "npm run build:dev -- --watch",
    "watch:browser": "npm run build:render -- --watch",
    "build:browser": "cp src/jamrock/browser.js dist/browser.js && cp browser.js dist/runtime.js",
    "build:backends": "npm run build:dev && npm run build:render -- --minify && npm run build:browser",
    "build:render": "esbuild src/views/index.js --main-fields=module --bundle --external:path --external:assert --outfile=dist/render.js",
    "build:nodejs": "esbuild src/main.js --bundle --outfile=dist/jamrock.js --platform=node --target=node10.23 --format=cjs",
    "build:dev": "npm run build:nodejs -- --external:sastre --external:mortero --external:somedom --external:live-server",
    "build": "npm run build:backends && npm run mortero --"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "repository": {
    "type": "git",
    "url": "https://github.com/grownjs/jamrock"
  },
  "license": "MIT",
  "devDependencies": {
    "@lukeed/uuid": "^2.0.0",
    "ansi_up": "^5.1.0",
    "chai": "^4.2.0",
    "cli-colors": "0.0.2",
    "codecov": "^3.8.1",
    "csurf": "^1.11.0",
    "esbuild": "^0.14.42",
    "eslint-plugin-pug": "^1.2.4",
    "glob": "^7.1.6",
    "happy-dom": "^2.33.1",
    "he": "^1.2.0",
    "highlight.js": "^10.7.3",
    "himalaya": "^1.1.0",
    "kramed": "^0.5.6",
    "mocha": "^7.2.0",
    "mock-require": "^3.0.3",
    "nyc": "^15.1.0",
    "open-in-editor": "^2.2.0",
    "path": "^0.12.7",
    "rewrite-exports": "^0.0.26",
    "rewrite-imports": "^3.0.0",
    "sqlite3": "^5.0.1",
    "testcafe": "1.18.6",
    "testdouble": "^3.16.1",
    "tiny-dedent": "^1.0.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@grown/cache": "^0.0.3",
    "@grown/conn": "^0.0.40",
    "@grown/session": "^0.0.23",
    "@grown/static": "^0.0.9",
    "@grown/test": "^0.0.17",
    "@grown/upload": "^0.0.18",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jamrock": "git+https://github.com/grownjs/eslint-plugin-jamrock.git",
    "fs-extra": "^9.1.0",
    "grown": "^1.3.11",
    "logro": "^0.1.16",
    "mailor": "^0.4.4",
    "modelorama": "git+https://github.com/pateketrueke/modelorama.git",
    "mortero": "^0.0.62",
    "nodemailer": "^6.7.5",
    "nodemon": "^2.0.7",
    "somedom": "^0.4.18",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.10.0",
    "wargs": "^0.9.6"
  }
}
