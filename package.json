{
  "name": "jamrock",
  "version": "0.0.0",
  "description": "The herbsman's web framework",
  "main": "dist/main.mjs",
  "bin": {
    "jam": "./bin/main.cjs",
    "rock": "./bin/main.cjs",
    "jamrock": "./bin/main.cjs"
  },
  "files": [
    "dist/shared/**",
    "dist/*.js",
    "bin/*",
    "test.js",
    "store.js",
    "mailer.js",
    "server.js",
    "models.js"
  ],
  "exports": {
    ".": "./dist/main.mjs",
    "./store": "./lib/store.mjs",
    "./server": "./lib/nodejs/server.mjs",
    "./server/bun": "./lib/bun/server.js",
    "./server/deno": "./lib/deno/server.js",
    "./server/nodejs": "./lib/nodejs/server.mjs",
    "./compiler": "./lib/nodejs/compiler.mjs",
    "./compiler/bun": "./lib/bun/compiler.js",
    "./compiler/deno": "./lib/deno/compiler.js",
    "./compiler/nodejs": "./lib/nodejs/compiler.mjs"
  },
  "scripts": {
    "test": "npm-run-all lint test:unit",
    "lint": "eslint *.js bin src tests seed --ext html,js",
    "seed": "jamrock main --out build --chdir seed --build",
    "dev": "npm run test:run -- --respawn",
    "test:ci": "npm run coverage:unit && npm run report -- -r ${LCOV_OUTPUT:-lcov}",
    "test:e2e": "testcafe ${BROWSER:-chrome} tests/e2e/cases --color --debug-on-fail",
    "test:run": "node-dev --ignore generated bin/test.mjs",
    "test:unit": "npm run test:run --",
    "coverage": "c8 --x '**/{build,shared,tests,dist}/**' -x '**/*.spec.mjs'",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov",
    "report": "c8 report",
    "prepare": "npm run build",
    "_mortero": "mortero -Ddist -L./bin/plug.js -X{jamrock,reactor,render,markup,views} -Xutil.js -Xmain.js -r '**:{filepath/1}'",
    "watch": "npm run build:dev -- --watch",
    "_watch:browser": "npm run build:render -- --watch",
    "_build:browser": "cp src/jamrock/browser.js dist/browser.js && cp browser.js dist/runtime.js",
    "_build:backends": "npm run build:dev && npm run build:render -- --minify && npm run build:browser",
    "_build:render": "esbuild src/client.js --bundle --outfile=dist/render.js --main-fields=module --external:path --external:assert",
    "_build:nodejs": "esbuild src/main.js --bundle --outfile=dist/jamrock.js --platform=node --target=node14 --format=esm",
    "_build:dev": "npm run build:nodejs -- --external:sastre --external:mortero --external:live-server",
    "build": "mortero -fysrc/{main,client}.js -Ddist -Bsrc/*.js -rsrc/*:{name}.mjs -achalk:./src/chalk.mjs --esm",
    "postbuild": "node scripts/postbuild.mjs",
    "prebuild": "node scripts/prebuild.mjs",
    "_build": "npm run build:backends && npm run mortero --"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "repository": {
    "type": "git",
    "url": "https://github.com/grownjs/jamrock"
  },
  "license": "MIT",
  "devDependencies": {
    "@japa/expect": "^2.0.1",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "@lukeed/uuid": "^2.0.0",
    "ansi_up": "^5.1.0",
    "c8": "^7.12.0",
    "cli-colors": "0.0.2",
    "codecov": "^3.8.1",
    "css": "^3.0.0",
    "csurf": "^1.11.0",
    "emphasize": "^5.0.0",
    "eslint-plugin-pug": "^1.2.4",
    "glob": "^7.1.6",
    "happy-dom": "^2.33.1",
    "jsdom": "^20.0.3",
    "kramed": "^0.5.6",
    "node-dev": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "open-in-editor": "^2.2.0",
    "path": "^0.12.7",
    "rewrite-exports": "^0.0.26",
    "rewrite-imports": "^3.0.0",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.1",
    "testcafe": "1.18.6",
    "testdouble": "^3.16.1",
    "tests": "^0.4.2",
    "tiny-dedent": "^1.0.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@grown/cache": "^0.0.3",
    "@grown/conn": "^0.0.42",
    "@grown/session": "^0.0.23",
    "@grown/static": "^0.0.9",
    "@grown/test": "^0.0.19",
    "@grown/upload": "^0.0.18",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jamrock": "github:grownjs/eslint-plugin-jamrock",
    "fs-extra": "^9.1.0",
    "grown": "^1.4.7",
    "logro": "^0.1.16",
    "mailor": "^0.4.4",
    "modelorama": "git+https://github.com/pateketrueke/modelorama.git",
    "mortero": "^0.0.96",
    "nodemailer": "^6.7.5",
    "somedom": "^0.4.27",
    "svelte": "^3.55.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.10.0",
    "wargs": "^0.9.6"
  }
}
