{
  "name": "jamrock",
  "version": "0.0.0",
  "description": "The herbsman's web framework",
  "main": "dist/main.mjs",
  "files": [
    "dist/*.*",
    "lib/**/*.*"
  ],
  "types": "./lib/env.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/env.d.ts",
        "default": "./dist/main.mjs"
      }
    },
    "./bun": "./lib/bun/main.mjs",
    "./deno": "./lib/deno/main.mjs",
    "./nodejs": "./lib/nodejs/main.mjs",
    "./server": "./dist/server.mjs",
    "./client": "./dist/client.mjs",
    "./shared": "./lib/main.mjs",
    "./store": "./lib/store.mjs",
    "./types": "./lib/env.d.ts"
  },
  "scripts": {
    "test": "npm-run-all lint test:unit",
    "lint": "eslint *.js bin lib src tests scripts examples --ext html,mjs,js",
    "_seed": "jamrock main --out build --chdir seed --build",
    "dev": "npm run test:run -- --respawn",
    "test:ci": "npm-run-all -s coverage:unit report -- -r ${LCOV_OUTPUT:-lcov}",
    "test:e2e": "npx testcafe ${BROWSER:-chrome} tests/e2e/cases --color --debug-on-fail",
    "test:run": "node-dev --ignore generated test.mjs",
    "test:unit": "npm run test:run --",
    "coverage": "c8 --x '**/{build,shared,tests,dist}/**' -x '**/*.spec.mjs'",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info",
    "report": "c8 report",
    "docs": "mortero --esm -dcpublic:. -ecss.less -Dbuild -rdocs/**:{filepath/2} -Rdocs/helpers.mjs --kramed.highlight=true --headers Cross-Origin-Embedder-Policy:require-corp --headers Cross-Origin-Opener-Policy:same-origin --platform browser docs/content",
    "dist": "npm-run-all -s dist:lib dist:all -- --no-minify",
    "dist:all": "npm run build -- -ysrc/client.js -ysrc/main.js",
    "dist:min": "npm-run-all -s predist dist:dom dist:ssr dist:lib postdist",
    "dist:dom": "npm run build -- -ysrc/client.js -Xsrc/main.js -asomedom/ssr:somedom",
    "dist:ssr": "npm run build -- -ysrc/main.js -Xsrc/client.js",
    "dist:lib": "npm run build -- -ysrc/server.js -Njamrock",
    "build": "mortero -f -X{client,server,handler,markup,reactor,render,templ,util} -Ddist -Bsrc/*.js -rsrc/*:{name}.mjs -Nsource-map -achalk:./src/chalk.mjs --esm",
    "postdist": "node scripts/postbuild.mjs",
    "predist": "node scripts/prebuild.mjs"
  },
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "repository": {
    "type": "git",
    "url": "https://github.com/grownjs/jamrock"
  },
  "license": "MIT",
  "optionalDependencies": {
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jamrock": "github:grownjs/eslint-plugin-jamrock",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.10.0"
  },
  "devDependencies": {
    "@grown/conn": "^0.0.44",
    "@grown/test": "^0.0.19",
    "@japa/expect": "^2.0.1",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "@lukeed/uuid": "^2.0.0",
    "@unocss/core": "^0.53.4",
    "ansi_up": "^5.1.0",
    "c8": "^8.0.0",
    "cli-colors": "0.0.2",
    "codecov": "^3.8.1",
    "css": "^3.0.0",
    "emphasize": "^5.0.0",
    "eslint-plugin-pug": "^1.2.4",
    "expect": "^29.3.1",
    "happy-dom": "^9.20.3",
    "he": "^1.2.0",
    "jsdom": "^22.1.0",
    "kramed": "^0.5.6",
    "less": "^4.1.3",
    "live-server": "^1.2.2",
    "mortero": "^0.0.112",
    "node-dev": "^8.0.0",
    "nohooks": "^0.0.9",
    "npm-run-all": "^4.1.5",
    "pocketbase": "^0.15.3",
    "pug": "^3.0.2",
    "redis": "^4.6.7",
    "rewrite-exports": "^0.0.28",
    "rewrite-imports": "^3.0.0",
    "rimraf": "^5.0.1",
    "somedom": "^0.7.4",
    "svelte": "^4.0.4",
    "testdouble": "^3.16.1",
    "tiny-dedent": "^1.0.2"
  },
  "dependencies": {
    "@grown/static": "^0.0.9",
    "fast-glob": "^3.2.13",
    "grown": "^1.4.23",
    "open-editor": "^4.0.0",
    "serve-static-bun": "^0.5.0",
    "undici": "^5.22.1"
  }
}
